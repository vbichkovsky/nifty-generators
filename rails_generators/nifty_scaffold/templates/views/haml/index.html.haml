- title <%= class_name %>.human_name(:count => 2)

%table
  %tr
    <%- for attribute in attributes -%>
    %th <%= attribute.column.human_name %>
    <%- end -%>
  - for <%= singular_name %> in @<%= plural_name %>
    %tr
      <%- if action? :edit -%>
      %td= link_to <%= singular_name %>.name, edit_<%= singular_name %>_path(<%= singular_name %>)
      <%- end -%>
      <%- for attribute in attributes -%>
      %td= <%= singular_name %>.<%= attribute.name %>
      <%- end -%>
      <%- if action? :destroy -%>
      = td_with_delete_link_for <%= singular_name %>
      <%- end -%>

<%- if actions? :new -%>
= link_to_new <%= class_name %>
<%- end -%>
